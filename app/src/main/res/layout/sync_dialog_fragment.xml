<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               >


    <ExpandableListView
            android:id="@+id/settingsConnectionPanel"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@id/btn_apply_sync"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <Button
            android:id="@+id/btn_apply_sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/settingsConnectionPanel"
            android:text="@string/btn_syncing"/>

</androidx.constraintlayout.widget.ConstraintLayout>